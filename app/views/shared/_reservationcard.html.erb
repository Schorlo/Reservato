<div class="white-wrapper">
  <div class="flexbox">
    <div class="reservation-action">
      <% @reservations.each do |reservation| %>

        <div class="reservationcard">
          <div>🍽: <%= reservation.restaurant.name %></div>
          <div>👫: <%= reservation.seats %></div>
          <% if !reservation.datetime.nil? %>
          <div>🕗: <%= reservation.datetime.strftime('%A, %b %d')  %></div>
          <% end %>
          <div>💬: "<%= reservation.comment %>"</div>
          <br>
          <br>
          <div><%= link_to "Delete", restaurant_reservation_path(reservation.restaurant, reservation), class: "btn-delete", method: :delete %></div>
        </div>

      <% end %>
    </div>
  </div>
</div>
